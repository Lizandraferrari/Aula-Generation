<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E4D1">

    <ImageView
        android:id="@+id/fundobrancoadd"
        android:layout_width="183dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novapub"
        app:srcCompat="@drawable/fundoimagem" />

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/fundobrancoadd"
        app:layout_constraintEnd_toEndOf="@+id/fundobrancoadd"
        app:layout_constraintStart_toStartOf="@+id/fundobrancoadd"
        app:layout_constraintTop_toTopOf="@+id/fundobrancoadd"
        app:srcCompat="@drawable/imagem" />

    <Button
        android:id="@+id/search2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_search"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toStartOf="@+id/cart2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/faixabranca"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:layout_marginStart="167dp"
        android:layout_marginEnd="167dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cart2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toEndOf="@+id/faixabranca"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peguepanc"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Pegue&amp;Panc"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/faixabranca"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagemfoto" />

    <TextView
        android:id="@+id/novapub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nova Publicação"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faixabranca" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            tools:text="Escreva aqui o título." />

        <EditText
            android:id="@+id/editTextopub"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>